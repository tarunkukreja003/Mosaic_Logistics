<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/speakerRelative"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:paddingBottom="1dp"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logis_back_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/actor"/>


    <TextView
        android:id="@+id/category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Event Setup"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_text"
        android:text="Find all event requirements here"
        android:gravity="center"
        android:id="@+id/category_sub_text"
        android:textColor="@color/white"/>



    </RelativeLayout>