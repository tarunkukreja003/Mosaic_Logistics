<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/finalRecyclerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_10dp"
        android:layout_marginTop="@dimen/text_margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:text="1." />

    <TextView
        android:id="@+id/finalRecyclerQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_10dp"
        android:layout_marginTop="@dimen/text_margin_10dp"
        android:layout_toEndOf="@+id/finalRecyclerCount"
        android:text="blah blah blah blah....."
        android:textColor="@color/black"
        android:textSize="@dimen/textsize16sp" />


    <TextView
        android:id="@+id/finalRecyclerAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finalRecyclerQuestion"
        android:layout_marginBottom="@dimen/text_margin_10dp"
        android:layout_marginStart="@dimen/text_margin_10dp"
        android:layout_marginTop="@dimen/text_margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_toEndOf="@+id/finalRecyclerCount"
        android:text="-(answer)"
        android:textSize="@dimen/textsize14sp" />

</RelativeLayout>